<div class="row justify-content-center">
	<div class="map-result">
		<img id="mapid" src="data:image/png;base64, <%= record.staticMap %>" />
	</div>
	<div class="rate-result">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td class="td-label">Carpark:</td>
					<td class="td-value td-top-right"><%= record.carpark %></td>
				</tr>
				<tr>
					<td class="td-label" rowspan="2">Weekday rates:</td>
					<td class="td-value"><%= record.weekdays_rate_1 %></td>
				</tr>
				<tr>
					<td class="td-value"><%= record.weekdays_rate_2 %></td>
				</tr>
				<tr>
					<td class="td-label">Saturday rates:</td>
					<td class="td-value"><%= record.saturday_rate %></td>
				</tr>
				<tr>
					<td class="td-label">Sunday/PH rates:</td>
					<td class="td-value"><%= record.sunday_publicholiday_rate %></td>
				</tr>
				<tr>
					<td colspan="2"></td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<a
							class="view-on-google-btn btn btn-info shadow-none"
							href="https://maps.google.com/?q=<%= record.carpark %>"
							target="_blank"
						>
							View on Google Maps
							<i class="bi bi-box-arrow-up-right ms-1"></i>
						</a>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
