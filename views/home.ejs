<%- include("partials/header.ejs") -%>
<div class="search-panel mx-auto mb-5">
	<form id="search-form">
		<div class="input-group">
			<div class="date"><%= date %></div>
			<input
				id="search-input"
				class="search-input form-control shadow-none"
				type="text"
				name="searchWord"
				value="<%= searchWord %>"
				autocomplete="off"
				placeholder="Search major shopping malls, attractions and hotels"
			/>
			<button type="submit" class="search-btn btn btn-primary shadow-none">
				Search <i class="bi bi-search ms-1"></i>
			</button>
		</div>
	</form>
	<div id="carpark-names">
		<p id="0" class="suggestion"></p>
		<p id="1" class="suggestion"></p>
		<p id="2" class="suggestion"></p>
		<p id="3" class="suggestion"></p>
		<p id="4" class="suggestion"></p>
	</div>
</div>
<div class="row justify-content-center">
	<div id="map-result" class="map-result">
		<img id="map-img" src="<%= map %>" />
	</div>
	<div id="rate-result" class="rate-result">
		<table class="table table-bordered">
			<tbody>
				<tr>
					<td class="td-label">Carpark:</td>
					<td class="td-value td-top-right"><%= record.carpark %></td>
				</tr>
				<tr>
					<td class="td-label" rowspan="2">Weekday rates:</td>
					<td class="td-value"><%= record.weekdays_rate_1 %></td>
				</tr>
				<tr>
					<td class="td-value"><%= record.weekdays_rate_2 %></td>
				</tr>
				<tr>
					<td class="td-label">Saturday rates:</td>
					<td class="td-value"><%= record.saturday_rate %></td>
				</tr>
				<tr>
					<td class="td-label">Sunday/PH rates:</td>
					<td class="td-value"><%= record.sunday_publicholiday_rate %></td>
				</tr>
				<tr>
					<td colspan="2"></td>
				</tr>
			</tbody>
			<tfoot>
				<tr>
					<td colspan="2">
						<a
							id="search-google-btn"
							class="btn btn-info shadow-none"
							href="https://maps.google.com/?q=<%= record.carpark %>"
							target="_blank"
						>
							View on Google Maps
							<i class="bi bi-box-arrow-up-right ms-1"></i>
						</a>
					</td>
				</tr>
			</tfoot>
		</table>
	</div>
</div>
<%- include("partials/footer.ejs") -%>
